<UserControl x:Class="InventoryAndSalesSystem.Views.RestockView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventoryAndSalesSystem.Views"
            >
   <ScrollViewer>
       <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Restock Inventory" FontSize="22" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Text="Add stock to existing products" 
                      FontSize="12" Foreground="Gray"/>
        </StackPanel>

        <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" 
                
               BorderThickness="1" CornerRadius="5" Padding="20" MaxWidth="600" 
               HorizontalAlignment="Center" VerticalAlignment="Top">
            
            <StackPanel>
                <TextBlock Text="Restock Details" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>

                <TextBlock Text="Select Product *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding Products}"
                         SelectedItem="{Binding SelectedProduct}"
                         DisplayMemberPath="Name"
                         Height="40" Margin="0,0,0,15"/>

                <Border Background="#FFEBEE" Padding="15" CornerRadius="5" Margin="0,0,0,15"
                                                                                                                         Visibility="{Binding SelectedProduct.IsLowStock, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⚠️" FontSize="20" Margin="0,0,10,0"/>
                        <TextBlock Text="This product is low on stock!" 
                                  FontWeight="SemiBold" Foreground="#f44336" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Background="#E8F5E9" Padding="15" CornerRadius="5" Margin="0,0,0,15"
                       Visibility="{Binding SelectedProduct, Converter={StaticResource NullToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Current Stock Information" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <TextBlock>
                            <Run Text="Current Stock: " FontWeight="SemiBold"/>
                            <Run Text="{Binding SelectedProduct.Stock}" FontSize="16" FontWeight="Bold"/>
                        </TextBlock>
                        <TextBlock>
                            <Run Text="Minimum Stock: " FontWeight="SemiBold"/>
                            <Run Text="{Binding SelectedProduct.MinStock}"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <TextBlock Text="Quantity to Add *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding RestockQuantity, UpdateSourceTrigger=PropertyChanged}" 
                        Height="40" Padding="10" FontSize="14" Margin="0,0,0,15"/>

                <Border Background="#FFF9C4" Padding="15" CornerRadius="5" Margin="0,0,0,15"
                       Visibility="{Binding SelectedProduct, Converter={StaticResource NullToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="After Restock" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <TextBlock FontSize="16">
                            <Run Text="New Stock Level: "/>
                            <Run FontSize="20" FontWeight="Bold" Foreground="#4CAF50">
                                <Run.Text>
                                    <MultiBinding StringFormat="{}{0}">
                                        <Binding Path="SelectedProduct.Stock"/>
                                        <Binding Path="RestockQuantity"/>
                                    </MultiBinding>
                                </Run.Text>
                            </Run>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <Button Content="📦 Add Stock" 
                       Command="{Binding RestockCommand}"
                       Style="{StaticResource PrimaryButton}"
                       Width="200" Height="45" FontSize="14"
                       HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
   </ScrollViewer> 
</UserControl>
