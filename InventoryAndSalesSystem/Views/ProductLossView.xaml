<UserControl x:Class="InventoryAndSalesSystem.Views.ProductLossView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:InventoryAndSalesSystem.Views"
             mc:Ignorable="d">
   <ScrollViewer>
       <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Product Loss" FontSize="22" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Text="Record product losses due to expiration, damage, or other reasons" 
                      FontSize="12" Foreground="Gray"/>
        </StackPanel>

        <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" 
               BorderThickness="1" CornerRadius="5" Padding="20" MaxWidth="600" 
               HorizontalAlignment="Center" VerticalAlignment="Top">
            <StackPanel>
                <TextBlock Text="Loss Details" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>
                
                <TextBlock Text="Select Product *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding Products}"
                         SelectedItem="{Binding SelectedProduct}"
                         DisplayMemberPath="Name"
                         Height="40" Margin="0,0,0,15"/>

                <Border Background="#FFEBEE" Padding="15" CornerRadius="5" Margin="0,0,0,15"
                       Visibility="{Binding SelectedProduct, Converter={StaticResource NullToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Product Information" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <TextBlock>
                            <Run Text="Price: " FontWeight="SemiBold"/>
                            <Run Text="{Binding SelectedProduct.Price, StringFormat=C, ConverterCulture='en-PH'}"/>
                        </TextBlock>
                        <TextBlock>
                            <Run Text="Current Stock: " FontWeight="SemiBold"/>
                            <Run Text="{Binding SelectedProduct.Stock}"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <TextBlock Text="Loss Quantity *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding LossQuantity, UpdateSourceTrigger=PropertyChanged}" 
                        Height="40" Padding="10" FontSize="14" Margin="0,0,0,15"/>

                <TextBlock Text="Loss Reason * (e.g., Expired, Damaged, Broken, Spoiled)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding LossReason, UpdateSourceTrigger=PropertyChanged}" 
                        Height="80" Padding="10" FontSize="14" Margin="0,0,0,15"
                        AcceptsReturn="True" TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto"/>

                <Border Background="#FCE4EC" Padding="15" CornerRadius="5" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="❌ Net Loss Warning" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#C62828"/>
                        <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#C62828">
                            This action records a permanent loss of inventory. The items will be removed from stock and cannot be recovered. Common reasons: Expired products, damaged goods, broken items, or spoilage.
                        </TextBlock>
                    </StackPanel>
                </Border>

                <Button Content="❌ Record Loss" 
                       Command="{Binding ProductLossCommand}"
                       Style="{StaticResource DangerButton}"
                       Width="200" Height="45" FontSize="14"
                       HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid> 
   </ScrollViewer> 
</UserControl>
