<UserControl x:Class="InventoryAndSalesSystem.Views.PurchaseReturnView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:InventoryAndSalesSystem.Views"
             mc:Ignorable="d">
   <ScrollViewer>
       <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Purchase Return" FontSize="22" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Text="Return defective or broken products to supplier" 
                      FontSize="12" Foreground="Gray"/>
        </StackPanel>

        <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" 
               BorderThickness="1" CornerRadius="5" Padding="20" MaxWidth="600" 
               HorizontalAlignment="Center" VerticalAlignment="Top">
            <StackPanel>
                <TextBlock Text="Return to Supplier" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>
                
                <TextBlock Text="Select Product *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding Products}"
                         SelectedItem="{Binding SelectedProduct}"
                         DisplayMemberPath="Name"
                         Height="40" Margin="0,0,0,15"/>

                <Border Background="#FFEBEE" Padding="15" CornerRadius="5" Margin="0,0,0,15"
                       Visibility="{Binding SelectedProduct, Converter={StaticResource NullToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Product Information" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <TextBlock>
                            <Run Text="Current Stock: " FontWeight="SemiBold"/>
                            <Run Text="{Binding SelectedProduct.Stock}"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <TextBlock Text="Return Quantity *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding ReturnQuantity, UpdateSourceTrigger=PropertyChanged}" 
                        Height="40" Padding="10" FontSize="14" Margin="0,0,0,15"/>

                <TextBlock Text="Return Reason * (e.g., Defective, Broken, Wrong Item)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding ReturnReason, UpdateSourceTrigger=PropertyChanged}" 
                        Height="80" Padding="10" FontSize="14" Margin="0,0,0,15"
                        AcceptsReturn="True" TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto"/>

                <Border Background="#FFF3E0" Padding="15" CornerRadius="5" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="âš ï¸ Purchase Return Info" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock TextWrapping="Wrap" FontSize="12">
                            Purchase returns reduce inventory. Use this when returning defective items to your supplier.
                        </TextBlock>
                    </StackPanel>
                </Border>

                <Button Content="ðŸ“¥ Return to Supplier" 
                       Command="{Binding PurchaseReturnCommand}"
                       Background="#FF9800"
                       Foreground="White"
                       Padding="15,8"
                       Cursor="Hand"
                       FontWeight="SemiBold"
                       BorderThickness="0"
                       Width="200" Height="45" FontSize="14"
                       HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
   </ScrollViewer> 
</UserControl>
