<UserControl x:Class="InventoryAndSalesSystem.Views.SellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventoryAndSalesSystem.Views"
             mc:Ignorable="d" 
             d:DesignHeight="593.214" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Sell Product" FontSize="22" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Text="Record product sales and update inventory" 
                      FontSize="12" Foreground="Gray"/>
        </StackPanel>

        <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" 
               BorderThickness="1" CornerRadius="5" Padding="20" MaxWidth="600" 
               HorizontalAlignment="Center" VerticalAlignment="Top">
            <StackPanel>
                <TextBlock Text="Sale Details" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>

                <TextBlock Text="Select Product *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding Products}"
                         SelectedItem="{Binding SelectedProduct}"
                         DisplayMemberPath="Name"
                         Height="40" Margin="0,0,0,15"/>

                <Border Background="#E3F2FD" Padding="15" CornerRadius="5" Margin="0,0,0,15"
                       Visibility="{Binding SelectedProduct, Converter={StaticResource NullToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Product Information" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <TextBlock>
                            <Run Text="Price: " FontWeight="SemiBold"/>
                            <Run Text="{Binding SelectedProduct.Price, StringFormat=C, ConverterCulture='en-PH'}"/>
                        </TextBlock>
                        <TextBlock>
                            <Run Text="Available Stock: " FontWeight="SemiBold"/>
                            <Run Text="{Binding SelectedProduct.Stock}"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <TextBlock Text="Quantity *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding SellQuantity, UpdateSourceTrigger=PropertyChanged}" 
                        Height="40" Padding="10" FontSize="14" Margin="0,0,0,15"/>

                <Border Background="#FFF3E0" Padding="15" CornerRadius="5" Margin="0,0,0,15"
                       Visibility="{Binding SelectedProduct, Converter={StaticResource NullToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Transaction Summary" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <TextBlock FontSize="16">
                            <Run Text="Total Amount: " FontWeight="SemiBold"/>
                            <Run Text="{Binding SelectedProduct.Price, StringFormat=C, ConverterCulture='en-PH'}" FontWeight="Bold" Foreground="#FF6F00"/>
                            <Run Text=" × "/>
                            <Run Text="{Binding SellQuantity}"/>
                            <Run Text=" = "/>
                            <Run FontSize="20" FontWeight="Bold" Foreground="#4CAF50">
                                <Run.Text>
                                    <MultiBinding StringFormat="{}{0:C}" ConverterCulture="en-PH">
                                        <Binding Path="SelectedProduct.Price"/>
                                        <Binding Path="SellQuantity"/>
                                    </MultiBinding>
                                </Run.Text>
                            </Run>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <Button Content="🛒 Complete Sale" 
                       Command="{Binding SellCommand}"
                       Style="{StaticResource PrimaryButton}"
                       Width="200" Height="45" FontSize="14"
                       HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
