<Window x:Class="InventoryAndSalesSystem.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:InventoryAndSalesSystem.Views"
        Title="Inventory Management System" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1976D2" Padding="20,15">
            <StackPanel>
                <TextBlock Text="Inventory Management System" 
                          FontSize="24" FontWeight="Bold" 
                          Foreground="White"/>
                <TextBlock Text="Manage your products, sales, and stock efficiently" 
                          FontSize="12" Foreground="#E3F2FD" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
            
        <!-- Navigation and Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Menu -->
            <Border Grid.Column="0" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
                <StackPanel Margin="10">
                    <Button Content="📦 Products" 
                            Height="45" 
                            Click="ShowProductList_Click"
                            Background="White"
                            HorizontalContentAlignment="Left"
                            Padding="15,10"/>
                    <Button Content="➕ Add/Edit Product" 
                            Height="45" 
                            Click="ShowAddEdit_Click"
                            Background="White"
                            HorizontalContentAlignment="Left"
                            Padding="15,10"/>
                    <Button Content="🛒 Sell Product" 
                            Height="45" 
                            Click="ShowSell_Click"
                            Background="White"
                            HorizontalContentAlignment="Left"
                            Padding="15,10"/>
                    <Button Content="📈 Restock" 
                            Height="45" 
                            Click="ShowRestock_Click"
                            Background="White"
                            HorizontalContentAlignment="Left"
                            Padding="15,10"/>
                    <Button Content="↩️ Sales Return" 
                            Height="45" 
                            Click="ShowSalesReturn_Click"
                            Background="White"
                            HorizontalContentAlignment="Left"
                            Padding="15,10"/>
                    <Button Content="📥 Purchase Return" 
                            Height="45" 
                            Click="ShowPurchaseReturn_Click"
                            Background="White"
                            HorizontalContentAlignment="Left"
                            Padding="15,10"/>
                    <Button Content="❌ Product Loss" 
                            Height="45" 
                            Click="ShowProductLoss_Click"
                            Background="White"
                            HorizontalContentAlignment="Left"
                            Padding="15,10"/>
                    <Button Content="📊 Reports" 
                            Height="45" 
                            Click="ShowReports_Click"
                            Background="White"
                            HorizontalContentAlignment="Left"
                            Padding="15,10"/>
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <ContentControl Grid.Column="1" x:Name="ContentArea" Margin="20"/>
        </Grid>
    </Grid>
</Window>
