<Window x:Class="InventoryAndSalesSystem.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inventory Management System" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Inventory Management System" 
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Name="AddProductBtn" Content="Add Product" Width="120" Height="35" 
                    Margin="0,0,10,0" Click="AddProduct_Click" Background="#4CAF50" 
                    Foreground="White" FontWeight="Bold" Cursor="Hand"/>
            <Button Name="EditProductBtn" Content="Edit Product" Width="120" Height="35" 
                    Margin="0,0,10,0" Click="EditProduct_Click" Background="#2196F3" 
                    Foreground="White" FontWeight="Bold" Cursor="Hand"/>
            <Button Name="DeleteProductBtn" Content="Delete Product" Width="120" Height="35" 
                    Margin="0,0,10,0" Click="DeleteProduct_Click" Background="#f44336" 
                    Foreground="White" FontWeight="Bold" Cursor="Hand"/>
            <Button Name="ViewReportBtn" Content="Sales Report" Width="120" Height="35" 
                    Click="ViewReport_Click" Background="#FF9800" 
                    Foreground="White" FontWeight="Bold" Cursor="Hand"/>
        </StackPanel>

        <DataGrid Grid.Row="2" Name="ProductsDataGrid" AutoGenerateColumns="False" 
                  CanUserAddRows="False" AlternatingRowBackground="LightGray"
                  HeadersVisibility="Column" GridLinesVisibility="All">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" IsReadOnly="True"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=C, ConverterCulture='en-PH'}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="Sold Units" Binding="{Binding SoldUnits}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Total Sales" Binding="{Binding TotalSales, StringFormat=C,ConverterCulture='en-PH'}" Width="120" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <StatusBar Grid.Row="3" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock Text="Total Products: " FontWeight="Bold"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="{Binding Items.Count, ElementName=ProductsDataGrid}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>

</Window>
