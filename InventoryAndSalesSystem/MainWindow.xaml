<Window x:Class="InventoryAndSalesSystem.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:InventoryAndSalesSystem.Views"
        Title="Inventory Management System" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1976D2" Padding="20,15">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Width="100" Height="100" VerticalAlignment="Center" Margin="0,0,15,0"
                       RenderOptions.BitmapScalingMode="HighQuality">
                    <Image.Source>
                        <BitmapImage UriSource="pack://application:,,,/Assets/logo.png"/>
                    </Image.Source>
                </Image>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Inventory Management System"
                              FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Manage your products, sales, and stock efficiently"
                              FontSize="12" Foreground="#E3F2FD" Margin="0,5,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Navigation and Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Menu -->
            <Border Grid.Column="0" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">

                        <!-- Inventory group -->
                        <TextBlock Text="INVENTORY" FontSize="9" FontWeight="Bold"
                                   Foreground="#9E9E9E" Margin="10,10,0,4"/>

                        <Button Content="📦 Products"
                                Height="40" Click="ShowProductList_Click"
                                Background="White" HorizontalContentAlignment="Left" Padding="15,8"/>
                        <Button Content="➕ Add / Edit Product"
                                Height="40" Click="ShowAddEdit_Click"
                                Background="White" HorizontalContentAlignment="Left" Padding="15,8"/>

                        <!-- Operations group -->
                        <TextBlock Text="OPERATIONS" FontSize="9" FontWeight="Bold"
                                   Foreground="#9E9E9E" Margin="10,12,0,4"/>

                        <Button Content="🛒 Sell Product"
                                Height="40" Click="ShowSell_Click"
                                Background="White" HorizontalContentAlignment="Left" Padding="15,8"/>
                        <Button Content="📈 Restock"
                                Height="40" Click="ShowRestock_Click"
                                Background="White" HorizontalContentAlignment="Left" Padding="15,8"/>
                        <Button Content="↩️ Sales Return"
                                Height="40" Click="ShowSalesReturn_Click"
                                Background="White" HorizontalContentAlignment="Left" Padding="15,8"/>
                        <Button Content="📥 Purchase Return"
                                Height="40" Click="ShowPurchaseReturn_Click"
                                Background="White" HorizontalContentAlignment="Left" Padding="15,8"/>
                        <Button Content="❌ Product Loss"
                                Height="40" Click="ShowProductLoss_Click"
                                Background="White" HorizontalContentAlignment="Left" Padding="15,8"/>

                        <!-- Analytics group -->
                        <TextBlock Text="ANALYTICS" FontSize="9" FontWeight="Bold"
                                   Foreground="#9E9E9E" Margin="10,12,0,4"/>

                        <Button Content="📊 Reports"
                                Height="40" Click="ShowReports_Click"
                                Background="White" HorizontalContentAlignment="Left" Padding="15,8"/>
                        <Button Content="🔢 Cycle Count"
                                Height="40" Click="ShowCycleCount_Click"
                                Background="White" HorizontalContentAlignment="Left" Padding="15,8"/>

                        <!-- System group -->
                        <TextBlock Text="SYSTEM" FontSize="9" FontWeight="Bold"
                                   Foreground="#9E9E9E" Margin="10,12,0,4"/>

                        <Button Content="📋 Audit Trail"
                                Height="40" Click="ShowAuditTrail_Click"
                                Background="White" HorizontalContentAlignment="Left" Padding="15,8"/>
                        <Button Content="💾 Backup"
                                Height="40" Click="ShowBackup_Click"
                                Background="White" HorizontalContentAlignment="Left" Padding="15,8"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Content Area -->
            <ContentControl Grid.Column="1" x:Name="ContentArea" Margin="20"/>
        </Grid>
    </Grid>
</Window>
