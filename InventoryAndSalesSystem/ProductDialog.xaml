<Window x:Class="InventoryAndSalesSystem.ProductDialog"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product Dialog" Height="451" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Product Name:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Name="NameTextBox" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Category:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Name="CategoryTextBox" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Price:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Name="PriceTextBox" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Stock Quantity:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Name="StockTextBox" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Margin="0,0,0,10">
            <TextBlock Text="Sold Units:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Name="SoldUnitsTextBox" Height="30" Text="0"/>
        </StackPanel>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Width="100" Height="35" Margin="0,0,10,0" 
                    Click="Save_Click" Background="#4CAF50" Foreground="White" 
                    FontWeight="Bold" Cursor="Hand"/>
            <Button Content="Cancel" Width="100" Height="35" 
                    Click="Cancel_Click" Background="#757575" Foreground="White" 
                    FontWeight="Bold" Cursor="Hand"/>
        </StackPanel>
    </Grid>

</Window>
